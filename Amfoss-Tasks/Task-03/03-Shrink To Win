import sys
data = sys.stdin.readlines()
num = int(data[0])
#print("num=",num)

import math

def find_sum(num):
    sum = 0
    while(num>0):
        mod = num%10
        sum = sum+mod
        num = math.floor(num/10)
    return sum

sum = 0
count = 0
while(num>=10):
    sum = find_sum(num)
    #print("sum =", sum)
    count= count+1
    num = sum

print(count)
